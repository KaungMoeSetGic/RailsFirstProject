<div class="container">
  <div class="card text-bg-light">
    <div class="card-body">
      <h5 class="card-title">
       <%= @friend.first_name %>
       <%= @friend.last_name %>
      </h5>
      <h6 class="card-text card-subtitle mb-2 text-body-secondary pb-3">
        <%= @friend.email %>   |
        <%= @friend.phone %>   |
        <%= @friend.twitter %>
      </h6>
      <div class="d-flex">
        <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
        <%= button_to "Delete", @friend, method: :delete, onclick: "return confirmDelete(event);", class: "btn btn-danger mx-3"%>
        <%= link_to "Back", friends_path, class:"btn btn-dark" %>
      </div>
    </div>
  </div>
</div>